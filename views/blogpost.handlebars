<!-- THE NAV BAR -->
<div class="topnav text-center">
    <a  href="/home">HOME</a>
    <a href="/schedule" class="col-xs-12">SCHEDULE</a>
    <a href="/user" class="col-xs-12">CONTACTS</a>
    <a class="active col-xs-12" href="/forum" class="col-xs-12">FORUM</a>
    <a href="/logout" class="col-xs-12">logout</a>
</div>
<button> <a href="/forum"><i class="fa fa-backward" aria-hidden="true"></i></a> </button> 
<div class="container">
    <div class="row">
        <div class="col">
            <h5>
                {{posts.body}}
            </h5>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal1">
                write a comment!
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">add comment</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
            
                            <textarea rows="4" cols="50" id="comment-input" placeholder="write something"></textarea>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button id="commentSubmitButton" data-id="{{posts.id}}" type="button" class="btn btn-primary">submit
                                comment</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
<!-- Button trigger modal -->
<div class="container">
    <div class="row">
        <div class="col table-spot">
            <table class="table table-striped">
                <thead class="table-head">
                    <th scope="col">comment</th>
                    <th scope="col">name</th>
                    <th scope="col">created time</th>
                </thead>
                <tbody>
                    {{#each posts.Comments}}
                    <tr>
                        <td> {{commentBody}} </td>
                        <td>{{User.firstName}}</td>
                        <td> {{createdAt}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

